@model IEnumerable<CLDVPart3.Models.Document>

@{
    ViewData["Title"] = "Documents";
}

<div class="container-documents">
    <h2 class="title">Documents</h2>

    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Upload" class="btn btn-accent">Upload New Document</a>
    }

    <div class="table-responsive">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Upload Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var document in Model)
                {
                    <tr>
                        <td>@document.Title</td>
                        <td>@document.Description</td>
                        <td>@document.UploadDate.ToShortDateString()</td>
                        <td class="actions">
                            <a asp-action="Download" asp-route-id="@document.Id" class="btn btn-download">Download</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="DeleteConfirmation" asp-route-id="@document.Id" class="btn btn-delete"
                                   onclick="return confirm('Are you sure you want to delete this document?');">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<style>

   /* General Container */
.container-documents {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #1c1c1c;
    border-radius: 10px;
    box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
    color: #e0e0e0;
}

/* Title Styling */
.container-documents .title {
    font-size: 2rem;
    font-weight: bold;
    color: #f0f0f0;
    text-align: center;
    margin-bottom: 20px;
}

/* Button Styling */
.btn {
    padding: 8px 15px;
    border-radius: 5px;
    font-weight: bold;
    text-transform: uppercase;
    text-decoration: none;
    color: #ffffff;
    transition: all 0.3s ease;
    display: inline-block;
    margin-bottom: 20px;
}

.btn-accent {
    background-color: #4a90e2;
}

.btn-download {
    background-color: #28a745;
}

.btn-delete {
    background-color: #dc3545;
}

.btn:hover {
    transform: scale(1.05);
    opacity: 0.9;
}

/* Table Styling */
.table-responsive {
    overflow-x: auto;
}

.styled-table {
    width: 100%;
    border-collapse: collapse;
    background-color: #2e2e2e;
    color: #e0e0e0;
}

.styled-table th, .styled-table td {
    padding: 15px;
    text-align: left;
}

.styled-table th {
    background-color: #333333;
    color: #f0f0f0;
    text-transform: uppercase;
}

.styled-table tr:nth-child(even) {
    background-color: #2c2c2c;
}

.styled-table tr:nth-child(odd) {
    background-color: #252525;
}

.styled-table tr:hover {
    background-color: #444444;
}

/* Action Buttons in Table */
.actions .btn {
    font-size: 0.8rem;
    margin: 2px;
}




</style>