@model IEnumerable<CLDVPart3.Models.Document>

@{
    ViewData["Title"] = "Documents";
}


<div class="container-documents">
    <h2>Documents</h2>

    @if (User.IsInRole("Admin")) // Show the button only if the user is an Admin
    {
        <a asp-action="Upload" class="btn btn-primary">Upload New Document</a>
    }

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Upload Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model)
            {
                <tr>
                    <td>@document.Title</td>
                    <td>@document.Description</td>
                    <td>@document.UploadDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Download" asp-route-id="@document.Id" class="btn btn-info">Download</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="DeleteConfirmation" asp-route-id="@document.Id" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this document?');">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>