@model CLDVPart3.Models.Document

@{
    ViewData["Title"] = "Upload Document";
}

<div class="container-document">
    <h2 class="title">Upload Document</h2>

    <form asp-action="Upload" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="Title" class="form-label">Document Title</label>
            <input asp-for="Title" class="form-input" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-input"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="file" class="form-label">Upload PDF</label>
            <input type="file" name="file" class="form-input" accept=".pdf" required />
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        <div class="form-group form-actions">
            <button type="submit" class="btn btn-upload">Upload</button>
            <a asp-action="Index" class="btn btn-cancel">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>

    /* General Container */
.container-document {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #1c1c1c;
    border-radius: 10px;
    box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
    color: #e0e0e0;
}

/* Title Styling */
.container-document .title {
    font-size: 1.8rem;
    font-weight: bold;
    color: #f0f0f0;
    text-align: center;
    margin-bottom: 20px;
}

/* Form Group Styling */
.form-group {
    margin-bottom: 20px;
}

.form-label {
    font-size: 0.9rem;
    color: #e0e0e0;
    margin-bottom: 5px;
    display: inline-block;
}

/* Input and Textarea Styling */
.form-input {
    width: 100%;
    padding: 10px;
    background-color: #333333;
    color: #f0f0f0;
    border: 1px solid #4a4a4a;
    border-radius: 5px;
    font-size: 1rem;
    outline: none;
    transition: border 0.3s ease;
}

.form-input:focus {
    border-color: #4a90e2;
}

/* Validation Styling */
.validation-summary {
    color: #dc3545;
    font-size: 0.9rem;
    margin-bottom: 15px;
}

/* Button Styling */
.btn {
    padding: 10px 20px;
    border-radius: 5px;
    font-weight: bold;
    text-transform: uppercase;
    text-decoration: none;
    font-size: 0.9rem;
    display: inline-block;
    margin-top: 10px;
    color: #ffffff;
    transition: all 0.3s ease;
}

.btn-upload {
    background-color: #4a90e2;
    border: none;
}

.btn-cancel {
    background-color: #dc3545;
    border: none;
    margin-left: 10px;
}

.btn:hover {
    transform: scale(1.05);
    opacity: 0.9;
}



</style>