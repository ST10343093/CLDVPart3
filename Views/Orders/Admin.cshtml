@model IEnumerable<CLDVPart3.Models.OrderAdminViewModel>

<div class="container-products">
    <h2 class="page-title">Admin - Orders</h2>

    <table class="orders-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>User Email</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.UserEmail</td>
                    <td>R @(order.TotalPrice.ToString("0.00"))</td>
                    <td>@order.Status</td>

                    <td>
                        @if (order.Status == "Pending")
                        {
                            <a asp-action="ProcessOrder" asp-route-id="@order.OrderId" class="btn btn-primary"><i class="fa fa-check" aria-hidden="true"></i> Approve Order</a>
                        }
                        else
                        {
                            <span class="approved">Approved</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>

    /* Global Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f8f9;
        color: #333;
        line-height: 1.6;
    }

    /* Container for the Admin Orders page */
    .container-products {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        max-width: 1000px;
        margin: 20px auto;
    }

    .page-title {
        font-size: 2rem;
        color: #2f9f3e; /* Green color for title */
        font-weight: bold;
        text-align: center;
    }

    .orders-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .orders-table th, .orders-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .orders-table th {
            background-color: #f4f8f9;
            font-weight: bold;
        }

        .orders-table td {
            font-size: 1rem;
        }

        .orders-table tr:hover {
            background-color: #f1f1f1;
        }

        .orders-table td:last-child {
            text-align: center;
        }

    .btn-primary {
        background-color: #2f9f3e;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #28a745;
        }

    .approved {
        color: #28a745;
        font-weight: bold;
        text-align: center;
    }


</style>
