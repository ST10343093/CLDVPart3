@model CLDVPart3.Models.Order

<div class="cart-container">
    <h2 class="cart-title">Your Shopping Cart</h2>

    @if (Model != null && Model.OrderRequests.Any())
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderRequest in Model.OrderRequests)
                {
                    <tr class="cart-item">
                        <td class="cart-product">
                            <img src="@orderRequest.Product.ImageUrlpath" alt="@orderRequest.Product.Name" width="100" height="100" class="cart-product-image" />
                            <span>@orderRequest.Product.Name</span>
                        </td>
                        <td class="cart-price">R @orderRequest.Product.Price?.ToString("0.00")</td>
                        <td class="cart-action">
                            <button class="remove-button" onclick="removeFromCart(@orderRequest.Product.ProductId)">
                                <i class="fas fa-trash-alt"></i> Remove
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total-price">
            <strong>Total Price: </strong> R @Model.OrderRequests.Sum(or => or.Product.Price ?? 0).ToString("0.00")
        </div>

        <input type="hidden" id="totalPrice" value="@Model.OrderRequests.Sum(or => or.Product.Price ?? 0).ToString("0.00")" />

        <div class="checkout-container">
            <button class="checkout-button" onclick="checkout()">Proceed to Checkout</button>
        </div>
    }
    else
    {
        <p class="empty-cart">Your cart is empty.</p>
    }
</div>
<style>

    /* Global Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f8f9;
        color: #333;
        line-height: 1.6;
    }

    .cart-container {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        max-width: 900px;
        margin: 20px auto;
    }

    .cart-title {
        font-size: 2rem;
        color: #2f9f3e; /* Green color for title */
        font-weight: bold;
        text-align: center;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

        .cart-table th, .cart-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

    .cart-product {
        display: flex;
        align-items: center;
    }

    .cart-product-image {
        margin-right: 15px;
    }

    .cart-price {
        font-size: 1.1rem;
        font-weight: bold;
        color: #333;
    }

    .cart-action {
        text-align: center;
    }

    .remove-button {
        background-color: transparent;
        border: none;
        color: #ff4d4d;
        cursor: pointer;
    }

        .remove-button:hover {
            color: #ff0000;
        }

    .total-price {
        font-size: 1.2rem;
        font-weight: bold;
        margin-top: 20px;
        text-align: right;
    }

    .checkout-container {
        text-align: center;
        margin-top: 20px;
    }

    .checkout-button {
        background-color: #2f9f3e;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .checkout-button:hover {
            background-color: #28a745;
        }

    .empty-cart {
        text-align: center;
        color: #888;
        font-size: 1.1rem;
    }


</style>
@section Scripts {
    <script>
        function checkout() {
            var totalPrice = document.getElementById('totalPrice').value;
            $.post('/MyWork/Checkout', { totalPrice: totalPrice }, function (response) {
                if (response.success) {
                    alert('Order placed successfully');
                    window.location.href = '/MyWork/Index'; // Redirect to product listing after checkout
                } else {
                    alert(response.message);
                }
            });
        }
    </script>

    <script>
        function removeFromCart(productId) {
            $.post('/MyWork/RemoveFromCart', { productId: productId }, function (response) {
                if (response.success) {
                    alert('Item removed from cart');
                    location.reload(); // Refresh the page to update the cart
                } else {
                    alert(response.message);
                }
            });
        }
    </script>
}
