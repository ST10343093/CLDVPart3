@model CLDVPart3.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="delete-container">
    <h1 class="page-title">Delete Product</h1>

    <h3 class="confirm-delete">Are you sure you want to delete this product?</h3>

    <div class="product-info">
        <h4>Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Category)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Availability)
            </dt>
            <dd class="col-sm-9">
                @{
                    if (Model.Availability.HasValue && Model.Availability.Value)
                    {
                        <span class="available-true">Available</span>
                    }
                    else
                    {
                        <span class="available-false">Out of Stock</span>
                    }
                }
            </dd>

            <dt class="col-sm-3">
                Product Image
            </dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrlpath" class="product-image" />
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-danger">Delete Product</button>
            <i class="fa fa-reply" aria-hidden="true"></i>
            <a asp-action="Index" class="back-link">Back to List</a>
        </form>
    </div>
</div>

<style>
    /* Global Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f8f9;
        color: #333;
        line-height: 1.6;
    }

    /* Delete Container */
    .delete-container {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        max-width: 850px;
        margin: 40px auto;
        font-size: 1rem;
    }

    /* Page Title */
    .page-title {
        font-size: 2rem;
        color: #e74c3c;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Confirmation Message */
    .confirm-delete {
        font-size: 1.3rem;
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    /* Product Info */
    .product-info {
        margin-bottom: 30px;
    }

    dl.row {
        margin: 0;
    }

    dt {
        font-weight: bold;
        color: #333;
    }

    dd {
        font-size: 1rem;
        margin-bottom: 12px;
    }

    /* Availability Status */
    .available-true {
        color: green;
        font-weight: bold;
    }

    .available-false {
        color: red;
        font-weight: bold;
    }

    /* Product Image */
    .product-image {
        max-width: 200px;
        margin-top: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    /* Buttons */
    .btn-danger {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        margin-top: 20px;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    /* Back to List Link */
    .back-link {
        color: #2f9f3e;
        font-size: 1rem;
        text-decoration: none;
        margin-left: 10px;
    }

        .back-link:hover {
            color: #248c2d;
        }

        .back-link i {
            margin-right: 5px;
        }

    /* Error Messages */
    .text-danger {
        font-size: 0.875rem;
        color: red;
    }
</style>
