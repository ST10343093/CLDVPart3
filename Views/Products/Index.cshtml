@model IEnumerable<CLDVPart3.Models.Product>

@{
    ViewData["Title"] = "Product Inventory";
}

<div class="container-products">
    <h1 class="page-title">Product Inventory</h1>

    <a class="create-new" asp-action="Create">Create New</a>

    <div class="filter-container">
        <p>Filter By Category:</p>
        @using (Html.BeginForm("Index", "Products", FormMethod.Get))
        {
            <div class="form-group">
                @Html.DropDownList("category", ViewBag.Category as SelectList, "All Categories", new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        }
    </div>

    <table class="product-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Availability</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                    <td>R @Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category)</td>
                    <td>@Html.DisplayFor(modelItem => item.Availability)</td>
                    <td>
                        <img src="@item.ImageUrlpath" alt="Product Image" class="product-image" />
                    </td>
                    <td class="actions">
                        <a href="@Url.Action("Edit", new { id = item.ProductId })"><i class="fas fa-edit"></i> Edit</a>
                        <a href="@Url.Action("Details", new { id = item.ProductId })"><i class="fas fa-info-circle"></i> Details</a>
                        <a href="@Url.Action("Delete", new { id = item.ProductId })"><i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Global Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f8f9;
        color: #333;
        line-height: 1.6;
    }

    /* Container for Product Inventory page */
    .container-products {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        max-width: 1000px;
        margin: 20px auto;
    }

    .page-title {
        font-size: 2rem;
        color: #2f9f3e; /* Green color for title */
        font-weight: bold;
        text-align: center;
    }

    /* Create New Button */
    .create-new {
        display: inline-block;
        padding: 10px 20px;
        background-color: #2f9f3e;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        margin-top: 15px;
        font-size: 1rem;
    }

        .create-new:hover {
            background-color: #248c2d;
        }

    /* Filter Container */
    .filter-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 20px 0;
    }

        .filter-container p {
            font-size: 1rem;
        }

        .filter-container .form-group {
            display: inline-block;
        }

        .filter-container .form-control {
            padding: 10px;
            width: 200px;
        }

        .filter-container .btn-primary {
            background-color: #2f9f3e;
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 4px;
            font-size: 1rem;
        }

            .filter-container .btn-primary:hover {
                background-color: #248c2d;
            }

    /* Product Table */
    .product-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .product-table th, .product-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .product-table th {
            background-color: #f4f8f9;
            font-weight: bold;
        }

        .product-table td {
            font-size: 1rem;
        }

        .product-table tr:hover {
            background-color: #f1f1f1;
        }

        .product-table td:last-child {
            text-align: center;
        }

    /* Product Image Styling */
    .product-image {
        width: 100px;
        height: 110px;
        object-fit: cover;
    }

    /* Action Links */
    .actions a {
        margin-right: 10px;
        color: #2f9f3e;
        text-decoration: none;
        font-size: 1rem;
    }

        .actions a:hover {
            color: #248c2d;
        }

    .actions i {
        margin-right: 5px;
    }

</style>